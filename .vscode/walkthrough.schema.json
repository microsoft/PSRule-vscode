{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/snippet"
  },
  "definitions": {
    "snippet": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "snippet": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "snippet"
      ],
      "defaultSnippets": [
        {
          "label": "New snippet",
          "body": {
            "name": "",
            "snippet": ""
          }
        }
      ]
    }
  }
}
