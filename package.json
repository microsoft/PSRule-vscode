{
    "name": "psrule-vscode-preview",
    "displayName": "PSRule",
    "version": "0.0.1",
    "publisher": "bewhite",
    "description": "An extension for IT Pros using the PSRule PowerShell module.",
    "author": {
        "name": "Bernie White"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/BernieWhite/PSRule-vscode/blob/master/README.md",
    "categories": [
        "Other",
        "Snippets"
    ],
    "keywords": [
        "PowerShell"
    ],
    "galleryBanner": {
        "color": "#0072c6",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BernieWhite/PSRule-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/BernieWhite/PSRule-vscode/issues"
    },
    "private": true,
    "preview": true,
    "activationEvents": [
        "onLanguage:powershell"
    ],
    "main": "./out/extension/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "powershell",
                "path": "./snippets/PSRule.json"
            }
        ],
        "grammars": [
            {
                "path": "./syntaxes/comments.json",
                "scopeName": "PSRule-powershell-comments",
                "injectTo": [
                    "source.powershell"
                ]
            },
            {
                "path": "./syntaxes/keywords.json",
                "scopeName": "PSRule-powershell-keywords",
                "injectTo": [
                    "source.powershell"
                ]
            },
            {
                "path": "./syntaxes/rule.json",
                "scopeName": "PSRule-powershell-rule",
                "injectTo": [
                    "source.powershell"
                ]
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "PSRule.yaml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "PSRule.yml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "psrule.yml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "psrule.yaml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.1"
    },
    "extensionDependencies": [
        "vscode.powershell",
        "redhat.vscode-yaml"
    ],
    "devDependencies": {
        "@types/node": "^8.10.25",
        "tslint": "~5.11.0",
        "typescript": "^3.1.3",
        "vsce": "~1.57.1",
        "vscode": "^1.1.30"
    }
}
